{
  "private": true,
  "license": "Apache-2",
  "scripts": {
    "tc": "flow check",
    "lint": "eslint packages/*/es6/**/*.js packages/*/test/es6/**/*.js packages/splitio-browser/lib/*.js",
    "dev": "./scripts/development.sh",
    "build": "./scripts/build.sh",
    "watch": "./scripts/watch.sh"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.6",
    "eslint": "1.8.0",
    "istanbul": "^0.3.5",
    "lerna": "^1.0.0",
    "matcha": "^0.6.0",
    "semver": "^5.0.0",
    "flow-bin": "^0.20.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "no-var": 2,
      "space-after-keywords": 2,
      "strict": 0,
      "no-underscore-dangle": 0,
      "curly": 0,
      "no-multi-spaces": 0,
      "key-spacing": 0,
      "no-return-assign": 0,
      "consistent-return": 0,
      "no-shadow": 0,
      "comma-dangle": 0,
      "no-use-before-define": 0,
      "no-empty": 0,
      "new-parens": 0,
      "no-cond-assign": 0,
      "no-fallthrough": 0,
      "new-cap": 0,
      "no-loop-func": 0,
      "no-unreachable": 0,
      "no-labels": 0,
      "no-process-exit": 0,
      "camelcase": 0,
      "no-console": 0,
      "no-constant-condition": 0,
      "no-inner-declarations": 0
    },
    "env": {
      "browser": true,
      "node": true,
      "amd": false,
      "es6": true
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "syntax-object-rest-spread",
      "transform-object-rest-spread"
    ]
  }
}
