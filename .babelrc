{
  "presets": [
    ["env", {
      "modules": false
    }]
  ],

  "plugins": [
    "syntax-object-rest-spread",         // usage of ... in objects
    "transform-object-rest-spread",      // usage of ... in objects
    "transform-runtime"                  // automatic polyfilling
  ],

  "env": {
    "cjs": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports"
      ]
    },
    "test": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        ["istanbul", {
          "exclude": [
            "**/*.spec.js",
            "**/node.js"
          ]
        }]
      ]
    }
  }
}
