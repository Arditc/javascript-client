{
  "presets": [
    ["env", {
      "modules": false
    }]
  ],

  "plugins": [
    "syntax-object-rest-spread",
    "transform-object-rest-spread",
    "transform-runtime"    
  ],

  "env": {
    "cjs": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports"
      ]
    },
    "development": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports"
      ]
    },
    "production": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports"
      ]
    },
    "test": {
      "presets": [
        ["env", {
          "useBuiltIns": true,
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        ["istanbul", {
          "exclude": [
            "**/*.spec.js",
            "**/node.js"
          ]
        }]
      ]
    }
  }
}
